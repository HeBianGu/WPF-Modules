<UserControl x:Class="HeBianGu.App.ShellOffice.View.Loyout.InfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.App.ShellOffice.View.Loyout"
             mc:Ignorable="d" 
             xmlns:h="QQ:908293466" 
             xmlns:system="clr-namespace:System;assembly=mscorlib" 
             xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="信息" FontSize="{DynamicResource S.FontSize.Header.1}" Margin="0,20"/>

            <StackPanel>
                <h:Row Style="{DynamicResource S.Row.Column.1}">
                    <Label Style="{DynamicResource S.Label.Label}" h:Cattach.Label="大小" Content="10条"/>
                </h:Row>
                
                <h:Row Style="{DynamicResource S.Row.Column.1}">
                    <Label Style="{DynamicResource S.Label.Label}" h:Cattach.Label="标题" Content="{Binding SelectedProject.Model.Name}"/>
                </h:Row>

                <h:Row Style="{DynamicResource S.Row.Column.1}">
                    <Label Style="{DynamicResource S.Label.Label}" h:Cattach.Label="模板" Content="模板一"/>
                </h:Row>

                <h:Row Style="{DynamicResource S.Row.Column.1}">
                    <Label Style="{DynamicResource S.Label.Label}" h:Cattach.Label="修改时间" Content="{Binding SelectedProject.Model.EDate}"/>
                </h:Row>

                <h:Row Style="{DynamicResource S.Row.Column.1}">
                    <Label Style="{DynamicResource S.Label.Label}" h:Cattach.Label="创建时间" Content="{Binding SelectedProject.Model.CDate}"/>
                </h:Row>

                <h:Row Style="{DynamicResource S.Row.Column.1}">
                    <Label Style="{DynamicResource S.Label.Label}" h:Cattach.Label="作者" Content="Adminstrator"/>
                </h:Row>
                <h:Row Style="{DynamicResource S.Row.Column.1}">
                    <Label Style="{DynamicResource S.Label.Label}" h:Cattach.Label="上次修改者" Content="Adminstrator"/>
                </h:Row>

                <h:Row Style="{DynamicResource S.Row.Column.1}">
                    <Label Style="{DynamicResource S.Label.Label}" h:Cattach.Label="状态" Content="未开始"/>
                </h:Row>

                <h:Row Style="{DynamicResource S.Row.Column.1}">
                    <Label Style="{DynamicResource S.Label.Label}" h:Cattach.Label="路径" Content="{Binding SelectedProject.Model.Path}"/>
                </h:Row>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
